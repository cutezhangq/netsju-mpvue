.message{
    padding:10px 0 0 20px;
    box-sizing: border-box;
    white-space:nowrap;
    background-color: white;
    .commenter{
      border-bottom: 1rpx solid $background;
      padding: 5rpx 0;    
    } 
    .replyer{
      padding:5px 0;
      border-top: 1rpx solid $background;
      margin:5rpx  0 5rpx 12vw
    }
    .end{
      height: 70rpx;
      font-size: 14px;
      color:grey;
      margin-left: 130px;
    }
    .userAvatar{
      width:8vw;
      height:8vw;
      display:inline-block; 
      vertical-align:top;
      border-radius: 50%;
    }  
    .user{
      padding-left:10px;
      display:inline-block; 
      font-size: 16px;
      p{
        padding:6px 0;
        width:450rpx;
      }
      p:nth-child(1) {
        font-weight: bold;
      }
      p:nth-child(2){
        overflow: hidden;
        text-overflow:ellipsis;
        white-space: nowrap;
      }
      p:nth-child(3) {
        font-size: 12px;
        color:grey;
      }
      input{
        display:inline-block;
      }
    }
    a{
      font-size: 15px;
      font-weight: 600;
      color:#4F4FD9;
      margin-left: 35%;
    }
  }
