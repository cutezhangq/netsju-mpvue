.back{
    width:100%;
    height:100vh;
    background-color: #eeeeee;

.searchTips {
    position: absolute;
    width:100%;
    font-size: 15px;
    color:grey;
    top: 91rpx;
    left: 0;
    bottom: 0;
    box-sizing: border-box;
    background: white;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    div {
        padding: 20rpx 0;
    }
    .noGoods {
        text-align: center;
        margin-top: 300rpx;
     }
  }

.record{
    width:100%;
    font-size: 30rpx;
    padding:0 32rpx;
    background-color: white;
    margin:20rpx auto;
    .record_text{
        padding:20rpx 0 10rpx 0;
        p{
            display: inline-block;
            font-weight: 400;
        }
        .img_fr{
            width:31rpx;
            height:31rpx;
            float:right;}
        }
    .cont{
      width:100%;
      height:80px;
      overflow hidden
      .record_tip{
          display: inline-block;
          .tip{
              padding:10rpx 17rpx;
              margin:10rpx;
              border-radius: 13px;
              background-color: #f1f1f1;
              color:gray;}
          }
      }
}

.productList{
    display:flex;
    flex-wrap: wrap;
    margin-top: 10rpx;
    margin-bottom: 20px;
  .product{
      flex:0 0 50%;
      background-color: white;
      margin:0;
      border:2px solid $background;
      padding-bottom: 10px;
      box-sizing: border-box;
      white-space: nowrap;
      overflow: hidden;
      text-align: center;
      img{
        width:100%;
        max-height:180px;}
    h3{
      padding:0 15rpx;
      font-size: 30rpx;
      overflow:hidden;
      text-overflow: ellipsis;}
    .price{
      color:red;
      font-weight:500;
      padding:0 15rpx;
      height:18px;
      margin:20rpx 0 20rpx 0;
      span:nth-child(1){
          font-size: 24rpx;
      }
    }
  }
}
}